{
	"rules": {
		"channels": {
			".read": "true",
			".indexOn": "owner",
			"$channel_id": {
				".write": "auth !== null && (!data.exists() || data.child('owner').val() === auth.token.email)",
				".validate": "newData.hasChildren(['name', 'description', 'owner'])",
				"name": {
					".validate": "newData.isString() && newData.val().length > 0"
				},
				"description": {
					".validate": "newData.isString() && newData.val().length > 0"
				},
				"owner": {
					".validate": "newData.isString() && newData.val().length > 0 && newData.val() === auth.token.email"
				},
				"collaborators": {
					"$user_email": {
						".validate": "newData.isString() && newData.val().length > 0 && newData.val().length < 128"
					}
				}
			}
		},

		"programs": {
			".read": "true",
			"$channel_id": {
				".write": "auth !== null && (root.child('channels/' + $channel_id + '/owner').val() === auth.token.email || root.child('channels/' + $channel_id + '/collaborators/' + auth.token.email).exists())",
				".validate": "root.child('channels/' + $channel_id).exists()",

				"$program_id": {
					".validate": "newData.hasChildren(['day', 'name', 'content'])",

					"day": {
						".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() < 7"
					},
					"name": {
						".validate": "newData.isString() && newData.val().length > 0"
					},
					"content": {
						".validate": "newData.isString() && newData.val().length > 0"
					},
					"link": {
						".validate": "newData.isString() && newData.val().length > 0"
					},
					"tags": {
						"$tag_id": {
							".validate": "newData.hasChildren(['name'])",
							"name": {
								".validate": "newData.isString() && newData.val().length > 0"
							}
						}
					},
				}
			}
		},

		"logs": {
			"$channel_id": {
				".read": "auth !== null && root.child('channels/' + $channel_id + '/owner').val() === auth.token.email",
				".validate": "root.child('channels/' + $channel_id).exists()",
			}
		}
	}
}
